    sta NUSIZ1

    ;lda #%00110000 ;set ball 8x-wide
    lda #%00100000 ;set ball 4x-wide
    sta CTRLPF

    ;set both players to the center horizontally
    lda #58
    sta YPos1

    lda #64
    sta YPos2

    ;set the player 1 x position, right side of screen
    lda #9
    sta XPos1

